@using Microsoft.AspNetCore.Identity
@using ClubActivityManager.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClubActivityManager</title>
    <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClubActivityManager.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <div class="login-topnav">
            <partial name="_LoginPartial" />
        </div>

        <div class="header-container">
            <div class="logo-box">
                <img src="~/assets/Icon.png" alt="Club Flacara Icon" class="club-icon" asp-append-version="true" />
                <div class="logo-text">
                    <h1>Club<br><span>flacăra</span></h1>
                </div>
            </div>

            <nav>
                <a asp-controller="Home" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                    HOME
                </a>
                <a asp-controller="Home" asp-action="JoinUs"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "JoinUs" ? "active" : "")">
                    JOIN US
                </a>
                <a asp-controller="Event" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Event" ? "active" : "")">
                    EVENTS
                </a>
                <a asp-controller="Home" asp-action="Contact"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")">
                    CONTACT
                </a>
            </nav>
        </div>
    </header>



    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="club-footer">
        <div class="footer-content">
            <div class="footer-left">
                <p>Club<br><span>flacăra</span></p>
            </div>
            <div class="footer-right">
                <h6>Navigation</h6>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="JoinUs">Join Us</a></li>
                    <li><a asp-controller="Event" asp-action="Index">Events</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
