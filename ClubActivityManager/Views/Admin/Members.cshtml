@model IEnumerable<ApplicationUser>

<div class="admin-dashboard-container">
    <h2 class="manage-heading">Members</h2>

    <div class="member-table-container">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="DeleteMember" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Delete this member?');">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
