@model IEnumerable<ClubActivityManager.Models.Payment>
@{
    ViewData["Title"] = "Payments";
}

<h2>Payments</h2>

<a asp-action="AddPayment" class="btn btn-primary mb-3">Add Payment</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Member</th>
            <th>Amount</th>
            <th>Method</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Member?.UserName</td>
                <td>@payment.Amount.ToString("C")</td>
                <td>@payment.Method</td>
                <td>@payment.PaymentDate.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
