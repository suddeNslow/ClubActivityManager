@model IEnumerable<Event>

<div class="form-container">
    <div class="form-content">
        <h2 class="form-heading">Events</h2>

        <table class="table styled-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Creator</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.Creator?.UserName</td>
                        <td>@evt.DateTime.ToString("g")</td>
                        <td>
                            <form asp-action="DeleteEvent" asp-route-id="@evt.EventId" method="post" onsubmit="return confirm('Delete this event?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
