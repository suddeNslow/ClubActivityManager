@model ClubActivityManager.Models.EventWithReservationViewModel
@{
    ViewData["Title"] = "Create Event";
}

<div class="form-container">
    <div class="form-content">
        <h1 class="manage-heading create-event-title">Create Event</h1>

        <form asp-action="Create" method="post" class="form">
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" placeholder="Ex: Artă și Joacă" />
                <label asp-for="Title" class="form-label">Event Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="Describe your event..."></textarea>
                <label asp-for="Description" class="form-label">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Location" class="form-control" placeholder="Ex: București" />
                <label asp-for="Location" class="form-label">Location</label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <h4 class="form-heading resource-title mb-3">Resource Reservation</h4>

            <div class="form-floating mb-3">
                <select asp-for="ResourceIds" class="form-control" asp-items="@(new MultiSelectList(Model.AvailableResources, "ResourceId", "Name"))" multiple></select>
                <label class="form-label">Select Resources</label>
                <span asp-validation-for="ResourceIds" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <label asp-for="StartTime" class="form-label">Start Time</label>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <label asp-for="EndTime" class="form-label">End Time</label>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <button type="submit" class="form-submit-btn create-event-btn">Create Event</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}