@model ClubActivityManager.Models.Resource
@{
    ViewData["Title"] = "Edit Resource";
}

<div class="form-container">
    <div class="form-content">
        <h2 class="form-heading">Edit Resource</h2>

        <form asp-action="Edit" method="post" class="form">
            <input type="hidden" asp-for="ResourceId" />

            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Type" class="form-control" placeholder="Type" />
                <label asp-for="Type"></label>
            </div>

            <div class="form-floating">
                <select asp-for="Availability" class="form-control">
                    <option>available</option>
                    <option>reserved</option>
                </select>
                <label asp-for="Availability"></label>
            </div>

            <button type="submit" class="form-submit-btn">Save Changes</button>
            <a asp-action="Index" class="login-button">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}