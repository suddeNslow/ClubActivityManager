@model ClubActivityManager.Models.Resource
@{
    ViewData["Title"] = "Edit Resource";
}

<h2>Edit Resource</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ResourceId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Availability"></label>
        <select asp-for="Availability" class="form-control">
            <option>available</option>
            <option>reserved</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
