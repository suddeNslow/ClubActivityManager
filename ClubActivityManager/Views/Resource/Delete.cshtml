@model ClubActivityManager.Models.Resource

@{
    ViewData["Title"] = "Delete Resource";
}

<div class="form-container">
    <div class="form-content">
        <h2 class="form-heading">Delete Resource</h2>

        <p class="mb-3">Are you sure you want to delete this resource?</p>

        <div class="resource-details mb-4">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Type:</strong> @Model.Type</p>
            <p><strong>Availability:</strong> @Model.Availability</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="form">
            <input type="hidden" asp-for="ResourceId" />
            <button type="submit" class="form-submit-btn btn-danger">Delete</button>
            <a asp-action="Index" class="login-button">Cancel</a>
        </form>
    </div>
</div>
